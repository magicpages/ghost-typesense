{
  "name": "@magicpages/ghost-typesense-cli",
  "version": "1.9.2",
  "description": "CLI tool for managing Ghost content in Typesense",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "ghost-typesense": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "clean": "rimraf dist",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@magicpages/ghost-typesense-config": "^1.9.2",
    "@magicpages/ghost-typesense-core": "^1.9.2",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
